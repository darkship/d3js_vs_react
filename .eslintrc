{
  "extends": ["standard", "google"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha":true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "no-console": "off",
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  }
}
